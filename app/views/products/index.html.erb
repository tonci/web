<h1>Listing products</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Price leva</th>
    <th>Price euro</th>
    <th>Price dolar</th>
    <th>Labels</th>
    <th>Stock</th>
    <th>Rating</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><%= product.price_leva %></td>
    <td><%= product.price_euro %></td>
    <td><%= product.price_dolar %></td>
    <td><%= product.labels %></td>
    <td><%= product.stock %></td>
    <td><%= product.rating %></td>
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= link_to 'Destroy', product, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

